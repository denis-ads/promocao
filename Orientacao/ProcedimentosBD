su postgres
psql template1
template1=# CREATE USER campanha WITH PASSWORD 'campanha@1';
template1=# CREATE DATABASE Campanhadb;
template1=# GRANT ALL PRIVILEGES ON DATABASE campanhadb to campanha;
template1=# \q

su postgres
bash-4.3$ psql campanhadb

