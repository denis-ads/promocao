						</goals>
					</execution>
				</executions>
				<configuration>
					<properties>
						<swarm.context.path>socio-torcedor</swarm.context.path>
						<swarm.http.port>8080</swarm.http.port>
					</properties>
				</configuration>
			</plugin>
